<aura:component access="global">
    <!-- Needed to send messages to/from VF page -->
    <aura:attribute name="vfHost" type="String" default="" />
    <aura:attribute name="lcHost" type="String" />
        
    <!-- Google Map data -->
    <aura:attribute name="mapOptions" type="Object" default='{"zoom": 15}' />
    <aura:attribute name="mapOptionsCenter" type="Object" />
    <aura:attribute name="mapData" type="Object[]" />
    <aura:attribute name="loadMap" type="Boolean" default="false" />

    <aura:attribute name="location" type="SObject"/>    
    <aura:method name="setLocation" action="{!c.setLocation}">
        <aura:attribute name="lat" type="String" /> 
        <aura:attribute name="long" type="String" /> 
    </aura:method>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:if isTrue="{!v.mapData.length > 0}">
        <iframe aura:id="vfFrame" src="{! '/apex/gMap?lcHost=' + v.lcHost}" width="100%" height="100%"/>
        <aura:set attribute="else">
            No data to display on map
        </aura:set>
    </aura:if>
</aura:component>